<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Econtainer.Views.DashboardPage"
             Title="DashboardPage">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Source="tree.gif" VerticalOptions="FillAndExpand" Grid.Row="0" MaximumWidthRequest="100" Grid.RowSpan="2"></Image>

            <Label Grid.Row="2" Text="DASHBOARD" HorizontalTextAlignment="Center" FontSize="Header" TextColor="#A0CF88"
                HorizontalOptions="FillAndExpand"/>

            <Rectangle BackgroundColor="#9E4D4D" Grid.Row="3" HeightRequest="4" Margin="70"></Rectangle>
            <Border 
    HeightRequest="160"
    Grid.Row="7"
    Margin="10"
    Stroke="{AppThemeBinding Light=Blue, Dark=Black}"
    StrokeThickness="4"
    BackgroundColor="{AppThemeBinding Light=#9E4D4D, Dark=Black}"
    StrokeShape="RoundRectangle 10">

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="PlantSubsystem_Tapped"/>
                </Border.GestureRecognizers>

                <Grid>
                    <Image Source="plant.png" Aspect="Fill"/>

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- First column -->
                            <ColumnDefinition Width="*"/>
                            <!-- Second column -->
                        </Grid.ColumnDefinitions>

                        <Label    
                            Grid.ColumnSpan="2"
                            FontFamily="Helvetica"
                Text="PLANT SUBSYSTEM"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
                    </Grid>
                </Grid>
            </Border>


            <Border 
    HeightRequest="160"
    Grid.Row="11"
                 Margin="10"
    Stroke="{AppThemeBinding Light=Blue, Dark=Black}"
    StrokeThickness="4"
    BackgroundColor="{AppThemeBinding Light=#9E4D4D, Dark=Black}"
    StrokeShape="RoundRectangle 10">

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SecuritySubsystem_Tapped"/>
                </Border.GestureRecognizers>

                <Grid>
                    <Image Source="security.png" Aspect="Fill"/>

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- First column -->
                            <ColumnDefinition Width="*"/>
                            <!-- Second column -->
                        </Grid.ColumnDefinitions>

                        <Label    
                            Grid.ColumnSpan="2"
                Text="SECURITY SUBSYSTEM"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
                    </Grid>
                </Grid>
            </Border>

            <Border 
            HeightRequest="160"
            Grid.Row="15"
            Margin="10"
            Stroke="{AppThemeBinding Light=Blue, Dark=Black}"
            StrokeThickness="4"
            BackgroundColor="{AppThemeBinding Light=#9E4D4D, Dark=Black}"
            StrokeShape="RoundRectangle 10">        

                <Border.GestureRecognizers>
                    <TapGestureRecognizer  Tapped="LocationSubsystem_Tapped"/>
                </Border.GestureRecognizers>

                <Grid>
                    <Image Source="location.png" Aspect="Fill"/>

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- First column -->
                            <ColumnDefinition Width="*"/>
                            <!-- Second column -->
                        </Grid.ColumnDefinitions>

                        <Label    
                            Grid.ColumnSpan="2"
                    Text="LOCATION SUBSYSTEM"
                    FontSize="32"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                    </Grid>
                </Grid>
            </Border>


        </Grid>
    </ScrollView>
</ContentPage>